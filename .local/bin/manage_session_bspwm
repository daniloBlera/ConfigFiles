#!/bin/bash
# A simple dmenu script to lock/close the WM or to shutdown.
# Usage: manage_session [DMENU_OPTIONS]
OPTIONS='Lock Screen
Close BSPWM
Reboot
Shut Down'

option=$(echo -e "$OPTIONS" | dmenu -i $@ -p 'What now chief?')

case "$option" in
	'Lock Screen')
		slock;;
	'Close BSPWM')
		pkill -x polybar; bspc quit;;
	'Reboot')
		reboot;;
	'Shut Down')
		poweroff;;
esac
