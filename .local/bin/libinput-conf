#!/bin/sh
# Input devices configuration through libinput driver

device='ETPS/2 Elantech Touchpad'
tapping='libinput Tapping Enabled'
natural_scroll='libinput Natural Scrolling Enabled'
horizontal_scroll='libinput Horizontal Scroll Enabled'

# Disable trackpad's horizontal scroll
xinput --set-prop "$device" "$horizontal_scroll" 0

# Enable trackpad's tap for left mouse button
xinput --set-prop "$device" "$tapping" 1

# Enable natural scrolling
xinput --set-prop "$device" "$natural_scroll" 1
