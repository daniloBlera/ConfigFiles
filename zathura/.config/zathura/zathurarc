# The colourscheme configuration
set completion-bg               '#170420'
set completion-fg               '#EA1646'
set completion-highlight-bg     '#EA1646'
set completion-highlight-fg     '#000000'

## Input/status bar
set inputbar-bg                 '#EA1646'
set inputbar-fg                 '#000000'

set statusbar-bg                '#212121'
set statusbar-fg                '#DADADA'

# Index/Table of contents
set index-active-bg             '#EA1646'
set index-active-fg             '#000000'
set index-bg                    '#000000'
set index-fg                    '#EA1646'

## Search highlight
set highlight-color             '#450005'   # background of all search highlight results
set highlight-fg                '#000000'   # text colour of all search highlight results
set highlight-active-color      '#EA1646'   # background of the current highlight

## Configuring recoloring of light and dark colours for a less bright reading
set recolor-keephue             true
set recolor-lightcolor          '#170420'
set recolor-darkcolor           '#DADADA'

# General
set font                        'UbuntuMono Nerd Font 11'
set incremental-search          true
set page-padding                3
set window-title-basename       true
set statusbar-home-tilde        true
set selection-clipboard         clipboard
