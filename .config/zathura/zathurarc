# Visuals
set font                        'UbuntuMono Nerd Font 11'

# Matching the red-black colourscheme from the window manager
set completion-bg               '#000000'
set completion-fg               '#DC122A'
set completion-highlight-bg     '#DC122A'
set completion-highlight-fg     '#000000'

set inputbar-bg                 '#DC122A'
set inputbar-fg                 '#000000'

set statusbar-bg                '#000000'
set statusbar-fg                '#DADADA'

set index-active-bg             '#DC122A'
set index-active-fg             '#000000'
set index-bg                    '#000000'
set index-fg                    '#DC122A'

# Functionality
set incremental-search          true
set page-padding                3
set window-title-basename       true
set statusbar-home-tilde        true
set selection-clipboard         clipboard
